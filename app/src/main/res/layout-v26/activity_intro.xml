<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/activity_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.sportson.sportsonbeta.Intro"
        android:background="@color/colorBone">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:id="@+id/logo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SportsON"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="normal|bold|italic"
                android:textAllCaps="false"
                android:fontFamily="serif"
                android:textAlignment="center"
                android:layout_gravity="center"
                tools:ignore="HardcodedText"
                android:id="@+id/sporton" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/user"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/textlogin"
                android:text="@string/loginText"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18sp"
                android:typeface="normal"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:gravity="bottom|center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/id_user"
                android:gravity="center"
                android:background="@android:color/white"
                android:foreground="@android:color/holo_blue_bright"
                android:keyboardNavigationCluster="false"
                android:justificationMode="inter_word"
                android:text="@string/us"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass">

            <TextView
                android:text="@string/passText"
                android:layout_width="match_parent"
                android:id="@+id/passTex"
                android:gravity="bottom|center_horizontal"
                android:typeface="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="18sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:layout_height="100dp" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/pass_user"
                android:textColorLink="@android:color/holo_blue_bright"
                android:background="@android:color/white"
                android:text="@string/passTem"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/bott">

            <Button
                android:text="@string/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_inicio"
                android:textColor="@android:color/white"
                android:background="?android:attr/colorPrimaryDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/spaceTex"
                android:text="@string/space"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@android:color/black" />
            <Button
                android:text="@string/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_reg"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:background="?android:attr/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/adds"></LinearLayout>

    </LinearLayout>


</ScrollView>
